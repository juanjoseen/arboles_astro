---
export interface Props {
    title: string;
    description: string;
    image: string;
}

const { title, description, image } = Astro.props;
---

<div class="blog-card">
    <div class="inner-box">
        <div class="image-box">
            <img src={image} alt={title} />
        </div>
        <div class="lower-content">
            <h3>{title}</h3>
            <p>{description}</p>
            <div class="link">
                <a href="#">Leer art√≠culo completo</a>
            </div>
        </div>
    </div>
</div>

<style>
    .blog-card {
        position: relative;
        display: block;
        margin-bottom: 30px;
    }

    .blog-card .inner-box {
        position: relative;
        display: block;
    }

    .blog-card .image-box {
        position: relative;
        display: block;
        overflow: hidden;
        margin-bottom: 25px;
    }

    .blog-card .image-box img {
        width: 100%;
        transition: all 500ms ease;
    }

    .blog-card:hover .image-box img {
        transform: scale(1.1);
    }

    .blog-card .lower-content {
        position: relative;
        display: block;
        text-align: center;
    }

    .blog-card .lower-content h3 {
        font-size: 30px;
        line-height: 40px;
        font-weight: 800;
        margin-bottom: 15px;
        color: var(--primary-dark);
    }

    .blog-card .lower-content p {
        font-size: 16px;
        line-height: 26px;
        color: #687c6c;
        margin-bottom: 20px;
    }

    .blog-card .lower-content .link a {
        font-size: 18px;
        font-weight: 800;
        color: #31a72d;
        text-transform: capitalize;
    }

    .blog-card .lower-content .link a:hover {
        color: var(--primary-dark);
        text-decoration: underline;
    }
</style>
