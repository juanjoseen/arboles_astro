---
import visitBlogList from "../../data/visitBlogList";
import BlogCard from "./BlogCard.astro";
---

<section class="blog-section">
    <div class="auto-container" style="margin: 80px auto;">
        <div class="sec-title text-center">
            <h2 style="font-weight: 800; font-size: 55px;">Blog</h2>
        </div>
        <div class="row clearfix">
            {
                visitBlogList.map((blog) => (
                    <div class="col-lg-4 col-md-6 col-sm-12 blog-block">
                        <BlogCard {...blog} />
                    </div>
                ))
            }
        </div>
    </div>
</section>

<style>
    .blog-section {
        padding-bottom: 80px;
    }
    .blog-block {
        margin-bottom: 30px;
    }
</style>
