---
export interface Props {
	current: string;
}

const { current } = Astro.props;
---

<!-- main header -->
<header class="main-header header-style-one">
	<div class="header-lower">
		<div style="display: flex; justify-content: center;">
			<img src="images/logo_black.png" style="width: 700px;" />
		</div>
		<div class="outer-box">
			<div class="menu-area">
				<!--Mobile Navigation Toggler-->
				<div class="mobile-nav-toggler">
					<i class="icon-bar"></i>
					<i class="icon-bar"></i>
					<i class="icon-bar"></i>
				</div>
				<nav class="main-menu navbar-expand-md navbar-light">
					<div
						class="collapse navbar-collapse show clearfix"
						id="navbarSupportedContent">
						<ul class="navigation clearfix">
							<li
								class:list={[
									"dropdown",
									current === "inicio" ? "current" : "",
								]}>
								<a href="/">Inicio</a>
							</li>
							<li
								class:list={[
									"dropdown",
									current === "camping" ? "current" : "",
								]}>
								<a href="index.html">Camping</a>
							</li>
							<li
								class:list={[
									"dropdown",
									current === "visitas" ? "current" : "",
								]}>
								<a href="/visitas">Visitas escolares</a>
							</li>
							<li
								class:list={[
									"dropdown",
									current === "arboles" ? "current" : "",
								]}>
								<a href="/arboles">Árboles de Navidad</a>
							</li>
							<li
								class:list={[
									"dropdown",
									current === "senderismo" ? "current" : "",
								]}>
								<a href="index.html">Senderismo</a>
							</li>
							<li
								class:list={[
									"dropdown",
									current === "rappel" ? "current" : "",
								]}>
								<a href="index.html">Rappel</a>
							</li>
							<li
								class:list={[
									"dropdown",
									"has-submenu",
									current === "contacto" ? "current" : "",
								]}>
								<a href="index.html">Otros</a>
								<ul class="submenu">
									<li><a href="index.html">Pista MTB</a></li>
									<li><a href="index.html">Blog</a></li>
								</ul>
							</li>
							<li
								class:list={[
									"dropdown",
									current === "contacto" ? "current" : "",
								]}>
								<a href="contact.html">Contacto</a>
							</li>
						</ul>
					</div>
				</nav>
			</div>
			<div class="menu-right-content">
				<div class="cart-box">
					<a href="index.html">
						<i class="flaticon-shopping-cart"></i>
					</a>
				</div>
			</div>
		</div>
	</div>

	<!--sticky Header-->
	<div class="sticky-header">
		<div class="outer-box">
			<div class="menu-area">
				<nav class="main-menu clearfix">
					<!--Keep This Empty / Menu will come through Javascript-->
				</nav>
			</div>
		</div>
	</div>
</header>
<!-- main-header end -->

<!-- Mobile Menu  -->
<div class="mobile-menu">
	<div class="menu-backdrop"></div>
	<div class="close-btn"><i class="fas fa-times"></i></div>

	<nav class="menu-box">
		<div class="nav-logo">
			<a href="index.html"
				><img src="images/logo-2.png" alt="" title="" /></a
			>
		</div>
		<div class="menu-outer">
			<!--Here Menu Will Come Automatically Via Javascript / Same Menu as in Header-->
		</div>
		<div class="contact-info">
			<h4>Información de Contacto</h4>
			<ul>
				<li><a href="tel:+525525654316">+52 55 2565 4316</a></li>
				<li>
					<a href="mailto:centroambiental.bosque@gmail.com"
						>centroambiental.bosque@gmail.com</a
					>
				</li>
			</ul>
		</div>
		<div class="social-links">
			<ul class="clearfix">
				<li>
					<a href="index.html"
						><span class="fab fa-facebook-square"></span></a
					>
				</li>
				<li>
					<a href="index.html"
						><span class="fab fa-instagram"></span></a
					>
				</li>
				<li>
					<a href="index.html"><span class="fab fa-youtube"></span></a
					>
				</li>
			</ul>
		</div>
	</nav>
</div><!-- End Mobile Menu -->
